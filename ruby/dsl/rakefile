require 'rake'
require '../meeriis'
require 'create'
 
def create_website(name)
   puts "Creating site #{name}"
	@w = MeerIIS::IIS6::Website.new 
	@w.Server = 'localhost'
    @w.Name = name
end

def with_home_directory(dir)
	puts "Home Directory #{dir}"
	@w.home = dir
end

def on_server(server)
	puts "On server #{server}"
	@w.server = server
end

def on_port(port)
	puts "On port #{port}"
	@w.port = port.to_i
end

def create_and_start()
	puts "Starting"
	@w.create
end